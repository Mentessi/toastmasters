<section>
  <div class="section">
    <h2>Topics</h2>
    <p>Feel free to use any of our topics in your own Toastmasters meeting.</p>
  </div>

  <div class="divider"></div>

  <div class="row section">

      <% @topics.each do |topic| %>
        <div class="col s4">
          <div class="card blue-grey lighten-4">
           <%= link_to topic_path(topic) do %>
            <div class="card-content">
              <span class="card-title black-text"> <%= topic.name %> </span>
              <p class="white-text">Author: <%= topic.user.username %> </p>
            </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>

    <%= link_to 'New Topic', new_topic_path, class: "waves-effect waves-light btn-large" %>
  </div>
</section>
