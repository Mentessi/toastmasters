<h1>Topics</h1>
<p>Edit topic</p>

<h2> <%= @topic.name %></h2>

<% if @topic.errors.any? %>
  <div>
    <h2>Error:</h2>
    <ul>
    <% @topic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form_for @topic do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
</div>

</br>

<%= link_to 'Back to topics page', topics_path %>
