<!DOCTYPE html>
<html>
  <head>
    <title>Toastmasters</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
  </head>

  <body>

    <nav class="nav-wrapper">
      <div class='container'>
        <a href="/" class="brand-logo right"></a>
        <ul class="left">
          <li><%= link_to 'Topics', topics_url %></li>
          <li><%= link_to 'Collections', collections_url %></li>
        </ul>

        <ul class="right">
          <% if user_signed_in? %>
            <li>
              <%= link_to 'Log Out', destroy_user_session_url, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign Up', new_user_registration_url %>
            </li>
            <li>
              <%= link_to 'Log In', new_user_session_url %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    </div>
  </body>
</html>
