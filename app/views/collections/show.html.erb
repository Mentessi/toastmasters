<h1><%= @collection.name %></h1>
</br>
<h2>Topics:</h2>
<% @collection.topics.each do |topic| %>
  <%= topic.name %>
  </br>
<% end %>

 <% if @collection.user == current_user %>
  <%= link_to 'Edit Collection', edit_collection_path(@collection.id) %>
  </br>
  <%= button_to 'Delete Collection', collection_path(@collection), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
